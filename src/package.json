{
  "name": "snowyrecorder",
  "version": "1.0.0",
  "description": "SnowyRecorder is a simple widget which allows you to record your voice.",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win-64": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --icon=Img/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SnowyRecorder\"",
    "package-win-32": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=Img/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SnowyRecorder\"",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=Img/icon.ico --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrzysztofZawisla/SnowyRecorder.git"
  },
  "keywords": [
    "SnowyRecorder",
    "Krzysztof",
    "Zawisła"
  ],
  "author": "Krzysztof Zawisła",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KrzysztofZawisla/SnowyRecorder/issues"
  },
  "homepage": "https://github.com/KrzysztofZawisla/SnowyRecorder#readme",
  "dependencies": {
    "node-audiorecorder": "^1.4.1"
  },
  "devDependencies": {
    "electron": "^4.1.1",
    "electron-packager": "^13.1.1"
  }
}
